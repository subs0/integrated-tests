{
    "name": "@-0/stack",
    "author": "Logan Powell",
    "license": "MIT",
    "version": "0.3.0",
    "description": "Monorepo for -0/ repo subtrees",
    "main": "./lib/index.js",
    "type": "module",
    "types": "./lib/index.d.ts",
    "repository": "https://github.com/subs0/stack",
    "homepage": "https://github.com/subs0/stack",
    "scripts": {
        "madge": "madge --circular lib/",
        "types": "tsc --project tsconfig.build.json",
        "typewatch": "tsc --project tsconfig.json",
        "test": "npm run madge && concurrently \"npm run typewatch\" \"jest --watchAll\"",
        "pages": "npm run build && gh-pages -d @-0/stack",
        "jsdoc": "jsdoc -c jsdoc/jsdoc.json --verbose --debug",
        "docs": "npm run types && npm run jsdoc",
        "clean": "rm -rf .cache build dist",
        "build": "npm run clean && cross-env NODE_ENV=production parcel build example/index.html -d @-0/stack --no-source-maps --no-cache --public-url ./",
        "start": "npm run madge && concurrently \"npm run typewatch\" \"parcel example/index.html md -p 8080 --open -d dist watch\"",
        "postgit": "git push origin master",
        "git": "git add . && git commit -m",
        "cl:keys": "node scripts/clean st=keys",
        "cl:utils": "node scripts/clean st=utils",
        "cl:spool": "node scripts/clean st=spool",
        "cl:browser": "node scripts/clean st=browser",
        "tp:keys": "node scripts/types st=keys",
        "tp:spool": "node scripts/types st=spool",
        "tp:utils": "node scripts/types st=utils",
        "tp:browser": "node scripts/types st=browser",
        "pa:keys": "node scripts/patch st=keys",
        "pa:utils": "node scripts/patch st=utils",
        "pa:spool": "node scripts/patch st=spool",
        "pa:browser": "node scripts/patch st=browser",
        "up:keys": "node scripts/update st=keys msg=%npm_config_msg%",
        "up:utils": "node scripts/update st=utils msg=%npm_config_msg%",
        "up:spool": "node scripts/update st=spool msg=%npm_config_msg%",
        "up:browser": "node scripts/update st=browser msg=%npm_config_msg%",
        "go:keys": "npm run cl:keys && npm run tp:keys && npm run pa:keys && npm run up:keys",
        "go:utils": "npm run cl:utils && npm run tp:utils && npm run pa:utils && npm run up:utils ",
        "go:spool": "npm run cl:spool && npm run tp:spool && npm run pa:spool && npm run up:spool",
        "go:browser": "npm run cl:browser && npm run tp:browser && npm run pa:browser && npm run up:browser",
        "go:all": "npm run go:keys && npm run go:utils && npm run go:spool && npm run go:browser && npm run ncu",
        "st:keys": "node scripts/subtree st=keys via=push",
        "st:utils": "node scripts/subtree st=utils via=push",
        "st:spool": "node scripts/subtree st=spool via=push",
        "st:browser": "node scripts/subtree st=browser via=push",
        "ncu": "ncu -u && npm i && npm audit fix",
        "check-env": "node -e 'console.log(process.env)' | grep npm",
        "example-npm-variable": "echo 'Notice how the variable is in CAPS %npm_config_msg% <- but not here!'",
        "go example": "npm run go:all --MSG=some-commit-message",
        "subtree:all": "npm run st:keys && npm run st:utils && npm run st:spool && npm run st:browser"
    },
    "keywords": [
        "thi.ng",
        "multiplex",
        "FRP"
    ],
    "dependencies": {
        "@-0/keys": "^0.3.68",
        "@-0/spool": "^0.3.55"
    },
    "peerDependencies": {
        "@thi.ng/paths": "^5.1.13",
        "@thi.ng/rstream": "^7.2.16",
        "@thi.ng/transducers-hdom": "^3.1.3"
    },
    "devDependencies": {
        "@-0/browser": "^0.3.76",
        "@-0/utils": "^0.3.65",
        "@babel/plugin-transform-modules-commonjs": "^7.18.6",
        "@babel/preset-env": "^7.18.10",
        "@testing-library/dom": "^8.17.1",
        "@thi.ng/arrays": "^2.3.4",
        "@thi.ng/associative": "6.2.5",
        "@thi.ng/atom": "^5.1.13",
        "@thi.ng/checks": "^3.2.4",
        "@thi.ng/paths": "^5.1.13",
        "@thi.ng/rstream": "^7.2.16",
        "@thi.ng/transducers": "^8.3.12",
        "@types/jest": "^28.1.7",
        "@types/node": "^18.7.6",
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "@typescript-eslint/parser": "^5.33.1",
        "babel-jest": "^28.1.3",
        "cross-env": "^7.0.3",
        "cssnano": "^5.1.13",
        "eslint": "^8.22.0",
        "eslint-plugin-jest": "^26.8.3",
        "gh-pages": "^4.0.0",
        "jest": "^28.1.3",
        "jest-environment-jsdom": "^28.1.3",
        "jsdom": "^20.0.0",
        "prettier": "^2.7.1",
        "ts-jest": "^28.0.8",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "prettier": {
        "singleQuote": false,
        "printWidth": 100,
        "endOfLine": "lf",
        "tabWidth": 4,
        "semi": false,
        "arrowParens": "avoid"
    }
}
