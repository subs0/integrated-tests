{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "plugins": ["plugins/markdown"],
  "source": {
    "include": ["src", "README.md"],
    "includePattern": "\\.(jsx|js|ts|tsx)$",
    "excludePattern": "(node_modules/|spule/)"
  },
  "templates": {
    "referenceTitle": "`@-0/hdom` docs",
    "disableSort": true,
    "collapse": false,
    "resources": {
      "@thi.ng/umbrella": "http://thi.ng/umbrella"
    }
  },
  "opts": {
    "package": "./package.json",
    "destination": ".",
    "encoding": "utf8",
    "recurse": true,
  }
}
